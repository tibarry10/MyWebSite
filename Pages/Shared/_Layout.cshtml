<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MyWebSite</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- ✅ CSS et Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top py-2 custom-navbar">
            <div class="container d-flex justify-content-between align-items-center">
                <a class="navbar-brand fw-bold" href="/">MyWebSite</a>
                <div class="d-flex">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-3">
                        <li class="nav-item">
                            <a class="nav-link nav-animated" href="/CV"><i class="bi bi-file-person me-1"></i> CV</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-animated" href="/Stages"><i class="bi bi-journal-code me-1"></i> Stages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-animated" href="/Contact"><i class="bi bi-envelope me-1"></i> Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted">
        <div class="container">
           Lien GitHub - <a href="">GitHub</a>
        </div>
    </footer>

    <!-- ✅ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
