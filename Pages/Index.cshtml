@page
@model MyWebSite.Pages.IndexModel
@{
    ViewData["Title"] = "Accueil";
}

<div class="container py-3 mt-2">
    <h1 class="text-center mb-2 text-light">Bienvenue sur mon site personnel</h1>
    <p class="text-center text-secondary mb-4">
        Ce site présente mon parcours, mon CV et mes expériences de stage.
    </p>


    <div class="row row-cols-1 gy-4 justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm h-100 text-center p-4">
                <h2 class="text-primary">CV</h2>
                <p class="text-center text-secondary mb-4">Découvrez mon parcours académique et professionnel.</p>
                <a href="/CV" class="btn btn-primary mt-2">Voir CV</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100 text-center p-4">
                <h2 class="text-primary">Stages</h2>
                <p class="text-center text-secondary mb-4">Retrouvez le détail de mes expériences en entreprise.</p>
                <a href="/Stages" class="btn btn-primary mt-2">Voir les stages</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100 text-center p-4">
                <h2 class="text-primary">Contact</h2>
                <p class="text-center text-secondary mb-4">N'hésitez pas à me contacter pour toute information.</p>
                <a href="/Contact" class="btn btn-primary mt-2">Me contacter</a>
            </div>
        </div>
    </div>
</div>
