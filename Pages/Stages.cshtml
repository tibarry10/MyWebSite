@page
@model MyWebSite.Pages.StagesModel
@{
    ViewData["Title"] = "Mes Stages";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Mes Stages</h1>
        <p class="text-center text-secondary mb-4">Voici un aperçu de mes expériences de stage réalisées durant mes deux années de BTS.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-primary">Stage de 1ère année</h2>
                    <p class="card-text">Makrisoft - Création site de restaurant, C# - Base de données</p>
                    <a href="/Stage1" class="btn btn-primary mt-3">Voir ce stage</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-primary">Stage de 2ème année</h2>
                    <p class="card-text">Makrisoft - Conception d'application, .Net, Flutter</p>
                    <a href="/Stage2" class="btn btn-primary mt-3">Voir ce stage</a>
                </div>
            </div>
        </div>
    </div>
</div>
